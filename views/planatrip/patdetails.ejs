<body>
     
  <form action="/mainlogin/<%= data1[0].id %>/<%= data2[0].tripid %>/pat" method="post" id="tripForm">
    <div class="hotelcontain">
        <h1>Please Choose you Hotel for staying</h1>
        <% for( let i = 0; i < data3.length; i++ ) { %>
            <label for="<%= i %>">
    
                <input type="radio" class="position shadow check" name="checks" value="<%= data3[i].title %>">
                <img src="<%= data3[i].image %>" alt="" class="patimg">
                <p><b><%= data3[i].title %> </b><br> &#8377; <%= data3[i].Price.toLocaleString("en-IN") %>/night</p>
            </label>       
        <% } %> 

        <h1>Please Choose you Attraction Points</h1>
        <% for( let i = 0; i < data4.length; i++ ) { %>
            <label for="<%= i %>">
    
                <input type="radio" class="position shadow check" name="tour<%= data4[i].ID%>"  value="<%= data4[i].Name %>">
                <img src="<%= data4[i].Image_URL %>" alt="" class="patimg">
                <p><b><%= data4[i].Name %> </b><br> &#8377; <%= data4[i].Entrance_Fee_INR.toLocaleString("en-IN") %>/night</p>
            </label>       
        <% } %> 
        <button type="submit">Done</button>
    </div>
  </form>

